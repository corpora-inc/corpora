{
    "name": "Django + PostgreSQL DevContainer",
    "dockerComposeFile": "docker-compose.yaml",
    "service": "app",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "settings": {
                "python.pythonPath": "/usr/local/bin/python",
                "python.analysis.autoImportCompletions": true
            },
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "mtxr.sqltools",
                "mtxr.sqltools-driver-pg"
            ]
        }
    },
    "postCreateCommand": "pip install -r py/requirements.txt",
    "forwardPorts": [
        8000,
        5432
    ],
    "remoteUser": "vscode"
}